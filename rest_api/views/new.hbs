<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>{{ pageTitle }}</h1>
            <p>create an article</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form action="/new" method="POST">
                <label for="title">Title</label><br/>
                <input name="title" id="title" type="text"/><br/><br/>
                <label for="body">Content</label><br/>
                <textarea name="content" id="content" cols="30" rows="10"></textarea><br/><br/>
                <button type="submit" class="btn btn-large btn-default">Submit</button>
            </form>
            <a href="/" class="btn btn-large btn-default">Back</a>
        </div>
    </div>
</div>

